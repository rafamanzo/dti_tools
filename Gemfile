source 'https://rubygems.org'

# NIfTI handler
gem 'c_nifti', '~> 0.0.1'

group :development, :test do
  # Automated tasks
  gem 'rake'

  # Unit tests
  gem 'rspec', '~> 3.0.0'

  # Fixtures made easy
  gem 'factory_girl', '~> 4.4.0'

  # Easier test writing
  gem "shoulda-matchers", '~>2.6.1'

  # Test coverage
  gem 'simplecov', require: false

  # Simple Mocks
  gem 'mocha', :require => 'mocha/api'
end